			<label for="user_email">Email</label>
			<input type="text" name="user[email]" value="<%= user.escape('email') %>" id="user_email" class="form-control">
		</div>

		<div class="form-group">
			<label for="user_password">Password</label>
			<input type="password" name="user[password]" value="" class="form-control">
		</div>
	
		<button class='full-post-modal btn oe-btn oe-btn-reflect oe-btn-hover-flap oe-btn-inline-icon submit-el session-btn' id="quote-post-btn"><span data-btn-text="sign in"><i class="fa fa-2x fa-cube"></i> sign in</span>
		</button>
		
	</form>

	</div>
	
</div>