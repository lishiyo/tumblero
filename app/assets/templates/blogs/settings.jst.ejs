<h1><%= blog.escape('name') %> <i class="fa fa-wrench"></i></h1>

<form id="edit-blog-form">
		<div class="form-group">
			<label for="blog_handle">HANDLE</label>
			<input type="text" name="blog[handle]" value="<%= blog.escape('handle') %>" class="form-control" id="blog_handle">
			<small>Tumblero URL: <span class="tumblero-url"></span></small>
	</div>
	
		<div class="form-group">
			<label for="blog_name">NAME</label>
			<input type="text" name="blog[name]" value="<%= blog.escape('name')%>" class="form-control" id="blog_name">
		</div>

		<div class="form-group">
			<label for="blog_description">DESCRIPTION (max 300 char)</label>
			<input type="textarea" id="blog_description" name="blog[description]" value="<%= blog.escape('description') %>" class="form-control" rows="2">
		</div>
	
		<div class="form-group">
			<label for="blog_avatar_url"><a href="#" class="upload-fp">upload new avatar <i class="fa fa-upload"></i></a></label>
		<input type="hidden" name="blog[avatar_url]" id="filepicker_urls" >
			<div class="image-thumbnails"></div>
		
		</div>
	
		<input type="submit" class="submit-el form-control btn btn-info" value="UPDATE">
</form>

