<div class="col-md-8 col-md-offset-2">
	
<%= form_for post do |f| %>
	<div class="form-group">
	<%= f.select(:blog_id, current_user.blogs.map{ |b| [b.name, b.id] }, {}, { class: "form-control" }) %>
	</div>

	<div class="form-group">
  <%= f.label :title, "Title:" %>
  <%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
	<%= f.label :filepicker_urls, "images:" %>
	<%= f.filepicker_field :filepicker_urls, multiple: true, dragdrop: true, store_location: 'S3' %> 
	</div>
	
	<div class="form-group">
  <%= f.label :content %>
  <%= f.text_area :content, class: 'form-control', rows: 12 %>
	</div>

  <%= f.submit %>
<% end %>
	
</div>